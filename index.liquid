

<!-- Shopify Liquid Schema -->
{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image"
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "top-left"
    },
    {
      "type": "text",
      "id": "doctor_name",
      "label": "Doctor's Name",
      "default": "Dr. John Doe"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Welcome to Our Clinic"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "We are committed to providing the best care for our patients."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "#"
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
