<!-- Custom Section File -->

<!-- HTML Structure -->
<section id="custom-section">
  <style>
    /* CSS Styles */
    #custom-section {
      text-align: center;
      padding: 20px;
    }
    #custom-section.main-image {
      position: relative;
    }
    #custom-section.main-image img {
      width: 100%;
      max-width: 300px;
      height: auto;
    }
    #custom-section.badge {
      position: absolute;
    }
    #custom-section.badge.top-left {
      top: 10px;
      left: 10px;
    }
    #custom-section.badge.top-right {
      top: 10px;
      right: 10px;
    }
    #custom-section.badge.bottom-left {
      bottom: 10px;
      left: 10px;
    }
    #custom-section.badge.bottom-right {
      bottom: 10px;
      right: 10px;
    }
    #custom-section.text-content {
      margin-top: 20px;
    }
    #custom-section.btn {
      display: inline-block;
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }

    */ Consider Small Devices and Make it A bit Responsive */
    @media (min-width: 768px) {
      #custom-section {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      #custom-section.main-image,
      #custom-section.text-content {
        max-width: 500px;
      }
    }
  </style>

  <div class="main-image">
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image">
    <div class="badge {{ section.settings.badge_position }}">
      <img src="{{ section.settings.badge_image | img_url: 'master' }}" alt="Badge Image">
    </div>
  </div>

  <div class="text-content">
    <h2>{{ section.settings.doctor_name }}</h2>
    <h3>{{ section.settings.headline }}</h3>
    <p>{{ section.settings.body_text }}</p>
    <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
  </div>
</section>

<!-- Shopify Liquid Schema -->
{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image"
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "top-left"
    },
    {
      "type": "text",
      "id": "doctor_name",
      "label": "Doctor's Name",
      "default": "Dr. John Doe"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Welcome to Our Clinic"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "We are committed to providing the best care for our patients."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "#"
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
